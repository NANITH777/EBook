@model int

<div class="container row pt-4">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Payment successful</h1>
        Order Number is: @Model <br /><br />
        <img src="~/images/book.jpg" width="60%" />
    </div>
    <div class="col-12 text-center" style="color: maroon">
        <br />
        Payment has been placed successfully! <br />
        <a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@Model" 
        class="btn btn-primary">Back to Order Details</a>
    </div>

</div>